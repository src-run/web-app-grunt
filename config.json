{
  "paths": {
    "fragments": {
      "script": "javascripts",
      "style" : "stylesheets",
      "in"    : "bundles/app",
      "to"    : "assets/"
    },
    "app": {
      "root": "web/",
      "in": {
        "script": "${paths.app.root}${paths.fragments.in}/${paths.fragments.script}/",
        "style" : "${paths.app.root}${paths.fragments.in}/${paths.fragments.style}/"
      },
      "to": {
        "script": "${paths.app.root}${paths.fragments.to}/${paths.fragments.script}/",
        "style" : "${paths.app.root}${paths.fragments.to}/${paths.fragments.style}/"
      }
    },
    "jquery": {
      "root": "web/components/jquery/dist/",
      "in": {
        "script": "${paths.jquery.root}"
      },
      "to": {
        "script": "${paths.app.to.script}jquery.js"
      }
    },
    "plug-bs": {
      "root": "web/components/bootstrap-sass/assets/",
      "in": {
        "script": "${paths.plug-bs.root}javascripts/",
        "style" : "${paths.plug-bs.root}stylesheets/"
      },
      "to": {
        "style": "${paths.app.to.style}bootstrap.css"
      }
    },
    "plug-waypoints": {
      "root": "web/components/jquery-waypoints/lib/",
      "in"  : {
        "script" : "${paths.plug-waypoints.root}"
      }
    },
    "plug-all": {
      "to": {
        "script": "${paths.app.to.script}plugins.js"
      }
    }
  },
  "files": {
    "jquery": {
      "in": {
        "script": [
          "${paths.jquery.in.script}jquery.js"
        ]
      }
    },
    "plug-bs": {
      "in": {
        "script": [
          "${paths.plug-bs.in.script}bootstrap/transition.js",
          "${paths.plug-bs.in.script}bootstrap/alert.js",
          "${paths.plug-bs.in.script}bootstrap/button.js",
          "${paths.plug-bs.in.script}bootstrap/carousel.js",
          "${paths.plug-bs.in.script}bootstrap/collapse.js",
          "${paths.plug-bs.in.script}bootstrap/dropdown.js",
          "${paths.plug-bs.in.script}bootstrap/modal.js",
          "${paths.plug-bs.in.script}bootstrap/tooltip.js",
          "${paths.plug-bs.in.script}bootstrap/popover.js",
          "${paths.plug-bs.in.script}bootstrap/scrollspy.js",
          "${paths.plug-bs.in.script}bootstrap/tab.js",
          "${paths.plug-bs.in.script}bootstrap/affix.js"
        ]
      }
    },
    "plug-waypoints" : {
      "in":   {
        "script": "${paths.plug-waypoints.in.script}jquery.waypoints.js"
      }
    },
    "app" : {
      "in": {
        "script": [
          "${paths.app.in.script}app.js"
        ]
      }
    }
  },
  "tasks": {
    "autoprefixer": {
      "browserList": ["Android >= 4", "Chrome >= 28", "Firefox >= 40", "Explorer >= 11", "iOS >= 7", "Opera >= 30", "Safari >= 9"
      ]
    }
  },
  "templates": {
    "banner": "\n/*!\n * This file is part of the `src-run/<%= pkg.name %>` project.\n *\n * (c) <%= pkg.author %>\n *\n * or the full copyright and license information, please view the LICENSE.md\n * file that was distributed with this source code.\n*/\n"
  }
}
