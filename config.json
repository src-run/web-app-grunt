{
  "options": {
    "rc-file": {
      "css-lint": "${paths.app.in.css}.csslintrc",
      "css-comb": "${paths.app.in.css}.csscomb.json",
      "js-hint" : "${paths.app.in.scr}.jshintrc",
      "jscs"    : "${paths.app.in.scr}.jscsrc"
    }
  },
  "paths": {
    "app": {
      "in": {
        "scr": "web/bundles/app/javascripts/",
        "css": "web/bundles/app/stylesheets/"
      },
      "to": {
        "scr": "web/assets/scr/",
        "css": "web/assets/css/",
        "img": "web/assets/img/"
      },
      "extra": [
        "web/assets/cache"
      ]
    },
    "jquery": {
      "root": "web/components/jquery/dist/",
      "in": {
        "scr": "${paths.jquery.root}"
      },
      "to": {
        "scr": "${paths.app.to.scr}jquery.js"
      }
    },
    "plug": {
      "root": "web/components/"
    },
    "plug-bs": {
      "root": "web/components/bootstrap-sass/assets/",
      "in": {
        "scr": "${paths.plug-bs.root}javascripts/",
        "css": "${paths.plug-bs.root}stylesheets/"
      },
      "to": {
        "css": "${paths.app.to.css}bootstrap.css"
      }
    },
    "plug-fa": {
      "root": "web/components/font-awesome/",
      "in": {
        "css": "${paths.plug-fa.root}scss/"
      }
    },
    "plug-waypoints": {
      "root": "web/components/jquery-waypoints/lib/",
      "in"  : {
        "scr": "${paths.plug-waypoints.root}"
      }
    },
    "plug-jslghtbx": {
      "root": "web/components/jsonlylightbox/",
      "in"  : {
        "scr": "${paths.plug-jslghtbx.root}js/",
        "css": "${paths.plug-jslghtbx.root}css/",
        "img": "${paths.plug-jslghtbx.root}img/"
      }
    },
    "plug-all": {
      "to": {
        "scr": "${paths.app.to.scr}plugins.js"
      }
    }
  },
  "files": {
    "app" : {
      "in": {
        "scr": [
          "${paths.app.in.scr}app.js"
        ],
        "scss": [
          "${paths.app.in.css}app.scss"
        ]
      },
      "to": {
        "css"    : "${paths.app.to.css}app.css",
        "css-min": "${paths.app.to.css}app.min.css",
        "css-map": "${paths.app.to.css}app.css.map",
        "scr"    : "${paths.app.to.scr}app.js",
        "scr-min": "${paths.app.to.scr}app.min.js"
      }
    },
    "grunt": [
      "Gruntfile.js",
      "package.js",
      "grunt/*.js"
    ],
    "jquery": {
      "in": {
        "scr": [
          "${paths.jquery.in.scr}jquery.js"
        ]
      }
    },
    "plug-bs": {
      "in": {
        "scr": [
          "${paths.plug-bs.in.scr}bootstrap/transition.js",
          "${paths.plug-bs.in.scr}bootstrap/alert.js",
          "${paths.plug-bs.in.scr}bootstrap/button.js",
          "${paths.plug-bs.in.scr}bootstrap/carousel.js",
          "${paths.plug-bs.in.scr}bootstrap/collapse.js",
          "${paths.plug-bs.in.scr}bootstrap/dropdown.js",
          "${paths.plug-bs.in.scr}bootstrap/modal.js",
          "${paths.plug-bs.in.scr}bootstrap/tooltip.js",
          "${paths.plug-bs.in.scr}bootstrap/popover.js",
          "${paths.plug-bs.in.scr}bootstrap/scrollspy.js",
          "${paths.plug-bs.in.scr}bootstrap/tab.js",
          "${paths.plug-bs.in.scr}bootstrap/affix.js"
        ]
      }
    },
    "plug-waypoints" : {
      "in": {
        "scr": "${paths.plug-waypoints.in.scr}jquery.waypoints.js"
      }
    },
    "plug-jslghtbx" : {
      "in": {
        "scr": "${paths.plug-jslghtbx.in.scr}lightbox.js",
        "css": "${paths.plug-jslghtbx.in.css}lightbox.scss"
      }
    }
  },
  "tasks": {
    "auto-prefix": {
      "browser-list": ["Android >= 4", "Chrome >= 28", "Firefox >= 40", "Explorer >= 11", "iOS >= 7", "Opera >= 30", "Safari >= 9"
      ]
    }
  },
  "templates": {
    "banner": "\n/*!\n * This file is part of the `src-run/<%= pkg.name %>` project.\n *\n * (c) <%= pkg.author %>\n *\n * or the full copyright and license information, please view the LICENSE.md\n * file that was distributed with this source code.\n*/\n"
  }
}
